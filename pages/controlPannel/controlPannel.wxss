.modal-input {
    flex: 1;
    background: #fff;
    font-size: 30rpx;
}

.modal-switch-item {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #afafaf;
}

.modal-switch-item:first-child {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-top: 1rpx solid #afafaf;
  border-bottom: 1rpx solid #afafaf;
}



.modal-switch-item-name {
  flex: 1
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}

.modal-cancel {
    width: 50% ;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.modal-confirm {
    width: 50% ;
    color: #ec5300;
    text-align: center;
}