page {
  display: flex;
  flex-direction: column;
  background: #f7f4f4;
  height: 100%;
}

.content  {
  flex: 1;
}

.content > swiper {
  height: 100%;
}

.bottom-tabbar {
  height: 150rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.tab-item.active > view {
  color: rgb(143, 170, 220);
}

.tab-item > view {
  margin-top: 15rpx;
  font-size: 25rpx;
}

/* 阀门操作页面 */

.settings {
  margin-top: 30rpx;
  background: #fff;
}

.settings-tittle {
  display: flex;
  align-items: center;
  font-size: 25rpx;
  color: hsl(0, 0%, 33%);
  border-bottom: 1rpx solid #afafaf;
  height: 50rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.settings-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-bottom: 1rpx solid #afafaf;
}

.settings-item-without-border-bottom {
  display: flex;
  align-items: center;
  height: 100rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.settings-item-name {
  flex: 1;
}

/* 弹框里面的各种样式 */
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50% ;
    left: 0;
    z-index: 9999;
    background: #fff;
    margin: -180rpx 105rpx;
    border-radius: 30rpx;
}

.modal-title {
    /* padding-top: 50rpx; */
    /* font-size: 36rpx; */
    margin-top: 40rpx;
    margin-bottom: 40rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    display: flex;
    /* padding: 50rpx 32rpx; */
    margin-left: 32rpx;
    margin-right: 32rpx;
    margin-bottom: 40rpx;
    padding: 10rpx 10rpx;
    border: 1rpx solid #afafaf;
    border-radius: 10rpx;
}

.modal-switch {
    display: flex;
    flex-direction: column;
    /* padding: 50rpx 32rpx; */
    margin-left: 32rpx;
    margin-right: 32rpx;
    margin-bottom: 40rpx;
}

